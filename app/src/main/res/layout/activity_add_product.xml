<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsScreen.AddProductActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/addProductBackButton"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/backkey2"/>

            <TextView
                android:id="@+id/addProductTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latoblack"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:text="Add Product"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter details below"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:fontFamily="@font/lato_regular"/>
            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to Generate Qr Code"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:fontFamily="@font/lato_regular"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Details"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:fontFamily="@font/lato_bold"/>

            <EditText
                android:id="@+id/codeProductCode"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="Product Code"
                android:inputType="number"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/latoblack"
                android:textColor="#0F0A0A"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/edit_text_rounded"/>
            <EditText
                android:id="@+id/nameProductName"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="Product name"
                android:textSize="@dimen/_13sdp"
                android:inputType="text"
                android:fontFamily="@font/latoblack"
                android:textColor="#0F0A0A"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/edit_text_rounded"/>
            <EditText
                android:id="@+id/mrpAddProduct"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="Mrp"
                android:textSize="@dimen/_13sdp"
                android:inputType="number"
                android:fontFamily="@font/latoblack"
                android:textColor="#0F0A0A"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/edit_text_rounded"/>
            <EditText
                android:id="@+id/agentMrpAddProduct"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:hint="GST %"
                android:textSize="@dimen/_13sdp"
                android:inputType="number"
                android:fontFamily="@font/latoblack"
                android:textColor="#0F0A0A"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/edit_text_rounded"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:weightSum="2"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submitBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="Submit"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1.2"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/Blue"
                    android:textSize="@dimen/_15sdp"
                    app:cornerRadius="@dimen/_20sdp">

                </com.google.android.material.button.MaterialButton>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addMoreBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_weight="0.8"
                    android:text="Add More"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/Blue"
                    android:textSize="@dimen/_15sdp"
                    app:cornerRadius="@dimen/_20sdp">

                </com.google.android.material.button.MaterialButton>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>